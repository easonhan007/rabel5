= form_tag({}, class: 'form-horizontal') do
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h3.modal-title 位面排序
      .modal-body
        - planes.each do |plane|
          .form-group
            %label{class: 'col-sm-4 col-sm-offset-3 control-label', style: 'text-align: left'}= plane.name
            .col-sm-2
              = text_field_tag("position[position_#{plane.id}]", plane.position, class: 'form-control input-sm')
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} 取消
        %input{type: 'submit', name: 'submit', value: '确定', class: 'btn btn-primary'}
